{% extends '/admin/base.admin.html.twig' %}

{% block title %}article index{% endblock %}

{% block body %}
    <h1 class="p-3 font-bold text-2xl">Articles</h1>

    <table class="table-auto self-center mx-auto w-94 border-collapse border border-gray-300 mt-4">
        <thead class="bg-gray-200 text-gray-700">
        <tr>
            <th class="border border-gray-300 px-4 py-2">Id</th>
            <th class="border border-gray-300 px-4 py-2">Title</th>
            <th class="border border-gray-300 px-4 py-2">Slug</th>
{#            <th class="border border-gray-300 px-4 py-2">Home</th>#}
            <th class="border border-gray-300 px-4 py-2">Actions</th>
        </tr>
        </thead>
        <tbody>
        {% for article in articles %}
            <tr class="bg-white hover:bg-gray-100">
                <td class="border border-gray-300 px-4 py-2">{{ article.id }}</td>
                <td class="border border-gray-300 px-4 py-2">{{ article.title }}</td>
                <td class="border border-gray-300 px-4 py-2">{{ article.slug }}</td>
{#                <td class="border border-gray-300 px-4 py-2">#}
{#                    <input type="checkbox" aria-readonly="true" disabled {{ article.home ? 'checked' : '' }} class="self-center">#}

{#                    <a href="{{ path('app_admin_article_change_home', {'id': article.id}) }}" class="text-blue-500 hover:text-blue-700">set</a>#}
{#                </td>#}
                <td class="border border-gray-300 px-4 py-2 flex justify-around">
                    <a href="{{ path('app_admin_article_show', {'id': article.id}) }}" class="text-blue-500 hover:text-blue-700">show</a>
                    <a href="{{ path('app_admin_article_edit', {'id': article.id}) }}" class="text-blue-500 hover:text-blue-700 ml-2">edit</a>
                    {{ include('admin/article/_delete_index_form.html.twig') }}
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5" class="border border-gray-300 px-4 py-2 text-center">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
    <div class="min-w-full flex justify-center">
        <a href="{{ path('app_admin_article_new') }}" class="bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded mt-4">Create new</a>
    </div>
{% endblock %}